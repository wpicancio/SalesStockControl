<UserControl x:Class="SalesStockControl.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalesStockControl.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="320" Padding="20" Background="#FAFAFA">

            <StackPanel>
                <TextBlock Text="Acesso ao Sistema" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"
                           Foreground="#333"/>

                <Label Content="Usuário:" Margin="0,5,0,0"/>
                <TextBox x:Name="txtUsername" Margin="0,0,0,10" Padding="5" FontSize="14"/>

                <Label Content="Senha:" Margin="0,5,0,0"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,20" Padding="5" FontSize="14"/>

                <Button x:Name="LoginButton" Content="Entrar" 
                        Click="LoginButton_Click" 
                        Background="#007ACC" Foreground="White" 
                        Height="35" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>