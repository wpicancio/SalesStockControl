<UserControl x:Class="SalesStockControl.Views.VendasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalesStockControl.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="White">

    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="SectionHeader">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style TargetType="Border" x:Key="SectionBorder">
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Registo de Nova Venda" FontSize="26" FontWeight="Bold" 
                       VerticalAlignment="Center" HorizontalAlignment="Left"
                       Foreground="#333"/>

            <Button x:Name="VoltarButton" Content="&lt; Voltar ao Menu" 
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Padding="10,5" FontSize="14"
                    Background="#6c757d" Foreground="White"
                    Click="Voltar_Click"/>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">

                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <TextBlock Text="Cliente e Data" Style="{StaticResource SectionHeader}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Cliente" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="ClienteOpt" Padding="5"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Data" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <DatePicker x:Name="DataVenda" Padding="3"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <TextBlock Text="Dados do Veículo" Style="{StaticResource SectionHeader}"/>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" Text="Marca"/>
                                <ComboBox x:Name="MarcaVendaOpt" Grid.Row="0" Grid.Column="1" Padding="5">
                                    <ComboBoxItem Content="Seat"/>
                                    <ComboBoxItem Content="Mercedes"/>
                                    <ComboBoxItem Content="Volkswagen"/>
                                    <ComboBoxItem Content="Fiat"/>
                                    <ComboBoxItem Content="Opel"/>
                                </ComboBox>

                                <TextBlock Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="20,0,10,0" Text="Modelo"/>
                                <TextBox x:Name="txtModeloVenda" Grid.Row="0" Grid.Column="3" Padding="5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,10,0" Text="Ano"/>
                                <TextBox x:Name="txtAnoVenda" Grid.Row="1" Grid.Column="1" Margin="0,10,0,0" Padding="5"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <TextBlock Text="Tabelier" Style="{StaticResource SectionHeader}"/>
                            <TextBlock Text="Está presente?" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <RadioButton x:Name="RadioButtonTabelieSim" Content="Sim" GroupName="TabelierGrupo" Margin="0,0,20,0"
                                             Checked="AtualizarTotal_Event"/>
                                <RadioButton x:Name="RadioButtonTabelie" Content="Não" GroupName="TabelierGrupo" IsChecked="True"
                                             Checked="AtualizarTotal_Event"/>
                            </StackPanel>

                            <TextBlock Text="Cor do tabelier" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox Width="200" x:Name="CorTabelieOpt" HorizontalAlignment="Left" Padding="5">
                                <ComboBoxItem Content="Preto"/>
                                <ComboBoxItem Content="Cinza"/>
                                <ComboBoxItem Content="Bege"/>
                                <ComboBoxItem Content="Castanho"/>
                                <ComboBoxItem Content="Azul escuro"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <TextBlock Text="Segurança" Style="{StaticResource SectionHeader}"/>

                            <TextBlock Text="AirBags" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <WrapPanel x:Name="WrapCamposAirBags" Margin="0,0,0,15">
                                <CheckBox x:Name="chkAirbagVolante" Content="Volante" Margin="5" Click="AtualizarTotal_Event"/>
                                <CheckBox x:Name="chkAirbagPassageiro" Content="Passageiro" Margin="5" Click="AtualizarTotal_Event"/>
                                <CheckBox x:Name="chkAirbagJoelho" Content="Joelho" Margin="5" Click="AtualizarTotal_Event"/>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <CheckBox x:Name="chkAirbagCortina" Content="Cortina" Click="AtualizarTotal_Event"/>
                                    <ComboBox x:Name="cmbAirbagCortina" Width="60" Margin="5,0,0,0" Padding="3" SelectionChanged="AtualizarTotal_Event">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <CheckBox x:Name="chkAirbagBanco" Content="Banco" Click="AtualizarTotal_Event"/>
                                    <ComboBox x:Name="cmbAirbagBanco" Width="60" Margin="5,0,0,0" Padding="3" SelectionChanged="AtualizarTotal_Event">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                    </ComboBox>
                                </StackPanel>
                            </WrapPanel>

                            <TextBlock Text="Cintos de segurança" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <WrapPanel x:Name="WrapCamposCintos" Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <CheckBox x:Name="chkCintoNormal" Content="Normal" Click="AtualizarTotal_Event"/>
                                    <ComboBox x:Name="cmbCintoNormal" Width="60" Margin="5,0,0,0" Padding="3" SelectionChanged="AtualizarTotal_Event">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                        <ComboBoxItem Content="6"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <CheckBox x:Name="chkCintoLaser" Content="Laser" Click="AtualizarTotal_Event"/>
                                    <ComboBox x:Name="cmbCintoLaser" Width="60" Margin="5,0,0,0" Padding="3" SelectionChanged="AtualizarTotal_Event">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                        <ComboBoxItem Content="6"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <CheckBox x:Name="chkCintoPreTensor" Content="Pré-Tensor" Click="AtualizarTotal_Event"/>
                                    <ComboBox x:Name="cmbCintoPreTensor" Width="60" Margin="5,0,0,0" Padding="3" SelectionChanged="AtualizarTotal_Event">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                        <ComboBoxItem Content="4"/>
                                        <ComboBoxItem Content="5"/>
                                        <ComboBoxItem Content="6"/>
                                    </ComboBox>
                                </StackPanel>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">

                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <TextBlock Text="Situação da Venda" Style="{StaticResource SectionHeader}"/>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" Text="Pago"/>
                                <RadioButton Grid.Row="0" Grid.Column="1" Content="Sim" GroupName="PagoGrupo" Margin="0,0,10,0"/>
                                <RadioButton x:Name="RadioButtonPagoNao" Grid.Row="0" Grid.Column="2" Content="Não" GroupName="PagoGrupo" IsChecked="True"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,10,0" Text="Entregue"/>
                                <RadioButton Grid.Row="1" Grid.Column="1" Content="Sim" GroupName="EntregueGrupo" Margin="0,10,10,0"/>
                                <RadioButton x:Name="RadioButtonEntregueNao" Grid.Row="1" Grid.Column="2" Content="Não" GroupName="EntregueGrupo" Margin="0,10,0,0" IsChecked="True"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource SectionBorder}">
                        <StackPanel>
                            <TextBlock Text="Total" Style="{StaticResource SectionHeader}"/>
                            <TextBox x:Name="txtTotalVenda" FontSize="20" FontWeight="Bold" Padding="5" 
                                     Text="€ 0,00" IsReadOnly="True" Background="#EEE"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Margin="0,10,0,0">
                        <Button x:Name="SalvarButton" Content="Salvar Venda" Height="40" Margin="0,0,0,10"
                                Background="#28a745" Foreground="White" FontWeight="Bold" 
                                FontSize="16" Click="SalvarButton_Click" />

                        <Button x:Name="LimparButton" Content="Limpar Formulário" Height="40" Margin="0,0,0,10"
                                Background="#dc3545" Foreground="White" FontWeight="Bold" 
                                FontSize="16" Click="LimparButton_Click" />
                    </StackPanel>

                </StackPanel>

            </Grid>

        </ScrollViewer>

    </Grid>
</UserControl>