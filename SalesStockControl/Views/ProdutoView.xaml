<UserControl x:Class="SalesStockControl.Views.ProdutoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalesStockControl.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Gestão de Produtos" FontSize="26" FontWeight="Bold" 
                       VerticalAlignment="Center" HorizontalAlignment="Left"
                       Foreground="#333"/>

            <Button x:Name="VoltarButton" Content="&lt; Voltar ao Menu" 
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Padding="10,5" FontSize="14"
                    Background="#6c757d" Foreground="White"
                    Click="Voltar_Click"/>
        </Grid>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" 
                Padding="20" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="700">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Tipo de Produto:" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbTipoProduto" Margin="5" Padding="5"
                              SelectionChanged="cmbTipoProduto_SelectionChanged"/>

                    <Label Grid.Row="1" Grid.Column="0" x:Name="lblSubTipo" Content="Tipo Específico:" VerticalAlignment="Center" Margin="5" Visibility="Collapsed"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbSubTipo" Margin="5" Padding="5" Visibility="Collapsed"
                              SelectionChanged="cmbSubTipo_SelectionChanged"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Marca:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtMarca" Margin="5" Padding="5"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Modelo do Carro:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtCarroModelo" Margin="5" Padding="5"/>

                    <Label Grid.Row="4" Grid.Column="0" Content="Ano:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtAno" Margin="5" Padding="5"/>

                    <Label Grid.Row="5" Grid.Column="0" x:Name="lblCor" Content="Cor:" VerticalAlignment="Center" Margin="5" Visibility="Collapsed"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtCor" Margin="5" Padding="5" Visibility="Collapsed"/>

                    <Label Grid.Row="6" Grid.Column="0" x:Name="lblQuantidadeEstoque" Content="Quantidade em Estoque:" VerticalAlignment="Center" Margin="5" Visibility="Collapsed"/>
                    <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtQuantidadeEstoque" Margin="5" Padding="5" Visibility="Collapsed"/>

                    <Label Grid.Row="7" Grid.Column="0" Content="Preço (€):" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="7" Grid.Column="1" x:Name="txtPreco" Margin="5" Padding="5" 
                             IsReadOnly="True" Background="#EEE"/>

                </Grid>

                <Button x:Name="SalvarProdutoButton" Content="Salvar Produto" 
                        Height="45" FontSize="18" FontWeight="Bold"
                        Background="#28a745" Foreground="White"
                        Margin="0,20,0,0" Width="200" HorizontalAlignment="Left"
                        Click="SalvarProduto_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>