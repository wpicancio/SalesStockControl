<UserControl x:Class="SalesStockControl.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalesStockControl.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Menu Principal" FontSize="30" Margin="0,0,0,30" 
                       FontWeight="Bold" HorizontalAlignment="Center"/>

            <Button x:Name="RegistrarVendaButton" 
                    Content="Registrar Venda" 
                    Width="250" Height="45" Margin="5" 
                    FontSize="16" Click="RegistrarVenda_Click"/>

            <Button x:Name="CadastrarClienteButton" 
                    Content="Cadastrar Cliente" 
                    Width="250" Height="45" Margin="5" 
                    FontSize="16" Click="CadastrarCliente_Click"/>

            <Button x:Name="GestaoProdutosButton" 
                    Content="Gestão de Produtos (Tabelies, etc.)" 
                    Width="250" Height="45" Margin="5" 
                    FontSize="16" Click="GestaoProdutos_Click"/>
        </StackPanel>
    </Grid>
</UserControl>