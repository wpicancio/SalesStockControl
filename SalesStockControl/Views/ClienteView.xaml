<UserControl x:Class="SalesStockControl.Views.ClienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalesStockControl.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Cadastro de Clientes" FontSize="26" FontWeight="Bold" 
                       VerticalAlignment="Center" HorizontalAlignment="Left"
                       Foreground="#333"/>

            <Button x:Name="VoltarButton" Content="&lt; Voltar ao Menu" 
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Padding="10,5" FontSize="14"
                    Background="#6c757d" Foreground="White"
                    Click="Voltar_Click"/>
        </Grid>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" 
                Padding="20" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="700">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Nome:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtNome" Margin="5" Padding="5"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Nome da Oficina:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtNomeOficina" Margin="5" Padding="5"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="NIF (Contribuinte):" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtNIF" Margin="5" Padding="5"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Telemovel:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtTelemovel" Margin="5" Padding="5"/>

                    <Label Grid.Row="5" Grid.Column="0" Content="Morada (Endereço):" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtMorada" Margin="5" Padding="5" Height="60" TextWrapping="Wrap"/>

                    <Label Grid.Row="6" Grid.Column="0" Content="Data de Cadastro:" VerticalAlignment="Center" Margin="5"/>
                    <DatePicker Grid.Row="6" Grid.Column="1" x:Name="dpDateCad" Margin="5" Padding="5"/>

                </Grid>

                <Button x:Name="SalvarClienteButton" Content="Salvar Cliente" 
                        Height="45" FontSize="18" FontWeight="Bold"
                        Background="#28a745" Foreground="White"
                        Margin="0,20,0,0" Width="200" HorizontalAlignment="Left"
                        Click="SalvarCliente_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>